<div>
  <%= link_to '&larr; Home'.html_safe, root_path %>
</div>

<h3>User Profile</h3>

<div>
  <%= image_tag user_avatar(current_user, 100) %>
  <br />
</div>

<table>
  <tr>
    <td>Name:</td>
    <td><%= current_user.name %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td><%= current_user.email %></td>
  </tr>
  <tr>
    <td>Created:</td>
    <td><%= current_user.created_at.strftime("%B %d, %Y") %></td>
  </tr>
  <tr>
    <td>Last updated:</td>
    <td><%= current_user.updated_at.strftime("%B %d, %Y") %></td>
  </tr>
</table>

<div class="break" style="height: 10px;"></div>

<div>
  <%= link_to edit_user_registration_path do %>
    <button class="btn_blue large">Edit your profile</button>
  <% end %>
</div>

<% if @is_admin %>
  <div>
    <br />
    <h4>Admin functions</h4>
    <ul>
      <li>
        <%= link_to "Purge expired demo users", demo_purge_path, method: "delete", rel: "nofollow", data: { confirm: 'Are you sure?' } %>
      </li>
    </ul>
  </div>
<% end %>
