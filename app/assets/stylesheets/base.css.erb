body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 100%;
    height: 100%;
    color: #001f3f;
    width: 100%;
    margin: 0;
    padding: 0;
    background-color: #FDF4E3;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

a:link {
    color: #3575bd;
    text-decoration: none;
}

a:visited {
    color: #3575bd;
}

a:hover {
    color: #3575bd;
    text-decoration: underline;
}

a:active {
    color: #3575bd;
} 

HR {
   border: 0;
   height: 1px;
   background: #001f3f;
}

/*  Can be used to make a vertical spacer. 
    Just set a 'height=10px' or whatever on the actual div or other element. */
.break {
  display: block;
}

.clear {
    clear: both;
}

.btn_header {
    border-radius: 2em;
    background-color: #FDF4E3;
    color: #000;
    font-size: .75rem;
    font-weight: bold;
}

.btn_green {
    border-radius: 2em;
    background-color: #57ab57;
    color: white;
}

.btn_blue {
    border-radius: 2em;
    background-color: rgb(46, 120, 190);
    color: white;
}

.btn_green.small, .btn_blue.small {
    font-size: .65rem;
}

.btn_green.medium, .btn_blue.medium {
    font-size: .8rem;
}

.btn_green.large, .btn_blue.large {
    font-size: .95rem;
}

#outer_container {
    margin: 0 auto;
    margin-top: 100px;
    margin-bottom: 55px;
}

#header_flexbox {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    background-color: #705446;
}

#logo-text-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
}

#masthead-title {
    color: #f0ddd8;
    font-weight: bold;
    margin-bottom: 5px;
}

#masthead-tagline {
    color: #f0ddd8;
}

#masthead-container {
    margin-left: 10px;
    text-align: left;
}

/* ======================================================================================= */
/* Hamburger menu */

.hamburger {
    background: none;
    position: absolute;
    top: 0;
    right: 0;
    line-height: 45px;
    padding-top: 15px;
    padding-right: 15px;
    padding-bottom: 0px;
    padding-left: 15px;
    color: #f0ddd8;
    border: 0;
    font-size: 2em;
    font-weight: bold;
    cursor: pointer;
    outline: none;
    z-index: 2000000;
}

.menu { 
    z-index: 1000000;
    font-weight: bold;
    font-size: 0.8em;
    width: 166px;
    background: #3C3431;
    position: absolute;
    text-align: center;
    font-size: 1rem;
    top: 50px;
    right: 0%;
    border: 1px solid #FDF4E3;
}

.menu ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    list-style-image: none;
}

.menu li {
    display: block;
    padding-top: 15px;
    padding-right: 0px;
    padding-bottom: 15px;
    padding-left: 0px;
    border-bottom: #FDF4E3 1px solid;
    color: #FDF4E3;
}
.menu li:hover {
    display: block;
    background: #E1C391;
    color: #3C3431;
    padding: 15px 0 15px 0;
    border-bottom: #FDF4E3 1px solid;
}

.menu ul li a {
    text-decoration: none;
    margin: 0px; 
    color: #FDF4E3;
}
.menu ul li a:hover {
    color: #3C3431;
    text-decoration: none;
}

.menu a {
    text-decoration: none;
    color: #3C3431;
}

.menu a:hover{
    text-decoration: none;
    color: #3C3431;
}

.glyphicon-home {
  color: white; 
  font-size: 1.5em; 
  margin-top: 5px; 
  margin: 0 auto;
}

/* /Hamburger menu */
/* ======================================================================================= */

#header_flexbox {
