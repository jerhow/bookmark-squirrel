    margin: 0 auto;
    text-align: center;
}

#functional_row_bottom {
    padding-top: 3px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
}

.footer_cell {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-evenly;
    align-items: center;
}

.footer_cell a {
    color: #FDF4E3;
}

#copyright {
    font-size: .8rem;
    color: #E1C391;
}

#copyright a {
    color: #E1C391;
}

.box {
   display: flex;
   align-items: center;
}

.submit_button {
    font-size: 1rem;
}

.middot {
    font-size: 1.25rem;
}

.user_edit_field_message {
    font-size: .85rem; 
    font-style: italic; 
}

.login_field {
    margin-bottom: 10px;
}

/* eb == 'edit bookmark' */
