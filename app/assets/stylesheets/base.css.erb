/* ======================================================================================= */
/* Media queries */

@media screen and (min-width: 768px) {

    #outer_container {
        width: 768px;
    }

    input[type=text], input[type=email], input[type=password] {
      padding: 1px;
      height: 25px;
      border: 1px solid #705446;
      background-color: white;
      font-size: 1rem;
    }

    #header-logo {
        background-image: url('<%= asset_path "bs-logo-02.png" %>');
        width: 55px;
        height: 80px;
        background-size: contain; /* If image breaks out of containing div, check browser compatibility with this property */
        background-repeat: no-repeat;
    }

    #bm_page_functional_top_row_left {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: center;
        width: 45%;
    }

    #bm_page_functional_top_row_right {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-around;
        align-items: left;
        width: 50%;
    }

    .db_ddl_label {
        font-size: .85rem;
        font-weight: bold;
    }

    .new_bm_textbox {
        width: 375px;
    }

    .new_bm_textarea {
        width: 375px;
        height: 60px;
        font-size: .9rem;
    }

    .user_profile_row {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        width: 60%;
        margin: 2px;
    }

    .edit_user_profile_row {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: flex-start;
        width: 70%;
        margin-bottom: 10px;
    }

    .edit_user_profile_row input[type=text], input[type=email], input[type=password] {
        width: 225px;
    }

    .home_page_action_row {
        width: 75%;
    }

    #bm_page_top_container_b {
        padding-top: 20px;
    }

    .cross {
        background: none;
        position: absolute;
        top: 0px;
        right: 0;
        color: #000;
        border: 0;
        font-size: 5em;
        line-height: 65px;
        font-weight: bold;
        cursor: pointer;
        outline: none;
        z-index: 1000000;
        padding-top: 17px;
        padding-right: 15px;
        padding-bottom: 0px;
        padding-left: 15px;
    }

    #header_flexbox {
        justify-content: center;
    }

    #masthead-title {
        font-size: 1.3rem;
    }

    #masthead-tagline {
        font-size: .9rem;
    }
}

@media screen and (min-width: 275px) and (max-width: 767px) {

    #outer_container {
        width: 100%;
    }

    input[type=text], input[type=email], input[type=password] {
      padding: 0px;
      height: 20px;
      border: 1px solid #705446;
      background-color: white;
      font-size: .9rem;
    }

    #header-logo {
        background-image: url('<%= asset_path "bs-logo-02.png" %>');
        width: 48px;
        height: 70px;
        background-size: contain; /* If image breaks out of containing div, check browser compatibility with this property */
        background-repeat: no-repeat;
    }

    #bm_page_functional_top_row_left {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: left;
    }

    #bm_page_functional_top_row_right {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: left;
    }

    .db_ddl_label {
        font-size: .85rem;
        font-weight: bold;
        clear: right;
    }

    .new_bm_textbox {
        width: 225px;
    }

    .new_bm_textarea {
        width: 225px;
        height: 60px;
        font-size: .9rem;
    }

    .user_profile_row {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        width: 97%;
        margin: 2px;
    }

    .edit_user_profile_row {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: flex-start;
        width: 99%;
        margin-bottom: 10px;
    }

    #bm_page_top_container_b {
        padding-top: 10px;
    }

    .cross {
        background: none;
        position: absolute;
        top: 0px;
        right: 0;
        color: #000;
        border: 0;
        font-size: 5em;
        line-height: 65px;
        font-weight: bold;
        cursor: pointer;
        outline: none;
        z-index: 1000000;
        padding-top: 20px;
        padding-right: 15px;
        padding-bottom: 0px;
        padding-left: 15px;
    }

    #header_flexbox {
        justify-content: space-between;
    }

    #masthead-title {
        font-size: 1.1rem;
    }

    #masthead-tagline {
        font-size: .75rem;
    }
}
/* /Media queries */
/* ======================================================================================= */
