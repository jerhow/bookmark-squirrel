body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 100%;
    height: 100%;
    color: #001f3f;
    width: 100%;
    margin: 0;
    padding: 0;
    background-color: #FDF4E3;
}

a:link {
    color: #3575bd;
    text-decoration: none;
}

a:visited {
    color: #3575bd;
}

a:hover {
    color: #3575bd;
    text-decoration: underline;
}

a:active {
    color: #3575bd;
} 

HR {
   border: 0;
   height: 1px;
   background: #001f3f;
}

/*  Can be used to make a vertical spacer. 
    Just set a 'height=10px' or whatever on the actual div or other element. */
.break {
  display: block;
}

.clear {
    clear: both;
}



/* ======================================================================================= */
/* Media queries */

@media screen and (min-width: 768px) { 
    #functional_row_top, #functional_row_bottom {
        width: 768px;
    }

    #outer_container {
        width: 768px;
        margin: 0 auto;
        margin-top: 100px;
        margin-bottom: 55px;
    }

    input[type=text], input[type=email], input[type=password] {
      padding: 1px;
      height: 25px;
      border: 1px solid #705446;
      background-color: white;
      font-size: 1rem;
    }

    #logo-text-container {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: center;
        margin-top: 2px;
        margin-bottom: 3px;
    }

    #header-logo {
        background-image: url('<%= asset_path "bs-logo-02.png" %>');
        width: 55px;
        height: 80px;
        background-size: contain; /* If image breaks out of containing div, check browser compatibility with this property */
        background-repeat: no-repeat;
    }

    #masthead-container {
        margin-left: 10px;
        text-align: center;
    }

    #masthead-title {
        color: #f0ddd8;
        font-size: 1.1rem;
        font-weight: bold;
    }

    #masthead-tagline {
        color: #f0ddd8;
        font-size: .75rem;
    }
}

@media screen and (min-width: 275px) and (max-width: 767px) { 
    #functional_row_top, #functional_row_bottom {
        width: 100%;
    }

    #outer_container {
        width: 100%;
        margin: 0 auto;
        margin-top: 130px;
        margin-bottom: 55px;
    }

    input[type=text], input[type=email], input[type=password] {
      padding: 0px;
      height: 20px;
      border: 1px solid #705446;
      background-color: white;
      font-size: .9rem;
    }

    #logo-text-container {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: center;
        margin-top: 2px;
        margin-bottom: 3px;
    }

    #header-logo {
        background-image: url('<%= asset_path "bs-logo-02.png" %>');
        width: 48px;
        height: 70px;
        background-size: contain; /* If image breaks out of containing div, check browser compatibility with this property */
        background-repeat: no-repeat;
    }

    #masthead-container {
        margin-left: 2px;
        text-align: center;
    }

    #masthead-title {
        color: #f0ddd8;
        font-size: 1.2rem;
        font-weight: bold;
    }

    #masthead-tagline {
        color: #f0ddd8;
        font-size: .9rem;
    }
}
/* /Media queries */
