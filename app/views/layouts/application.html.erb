<!DOCTYPE html>
<html>
  <head>
    <title>BookmarkSquirrel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'base', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="fixed_header" class="header">
      <div id='functional_row_top'>
          <div id="con_user">
              <!-- <a href="#" onclick="sd.popUserSettingsModal();" title="User settings"><img 
                  id='user_icon' alt="User settings" src="{{ .Common.StaticAssetUrlBase }}user-50x50-trans.png" /></a> -->
                  <!-- <div id='user_icon_label'>Settings</div> -->
                  <% if !current_user.nil? %>
                    <%= link_to current_user.name, show_user_path %>
                  <% else %>
                    <%= link_to 'Login', new_user_session_path %>
                  <% end %>
                  <!-- <div id="nickname"></div> -->
          </div>

          <div id='con_masthead'>
              <a href='<%= root_path %>' style="color: #f0ddd8;">
                <div id='mastheadTitle'>Bookmark Squirrel</div>
                <div id='mastheadTagline'>Bookmark sharing for hoarders</div>
              </a>
              <!-- <div id='mastheadTagline'>Collaborative, sharable bookmark hoarding</div> -->
          </div>
          
          <div id="con_logout">
              <!-- <a href="#" onclick="sd.logout();" title="Log out"><img 
                  id='logout_icon' alt="Log out" src="{{ .Common.StaticAssetUrlBase }}logout-door-50x83-trans.png" /></a> -->
              <!-- <div id="logout_label">logout</div> -->
              <% if !current_user.nil? %>
                <%= link_to 'Logout', destroy_user_session_path %>
              <% end %>
          </div><!-- con_logout -->

      </div> <!-- functional_row_top -->
    </div>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
