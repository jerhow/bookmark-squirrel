<p><%= link_to "&larr; Back".html_safe, root_path %></p>

<h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="message">
    <h4><%= demo_msg_helper %></h4>
  </div>

  <div class="login_field">
    <%= f.label :email %>:
    <div class="break" style="height: 3px;"></div>
    <% if demo_mode %>
      <div class="demo_mode_login_field">demo@bookmarksquirrel.com</div>
      <%= f.hidden_field :email, value: demo_field_helper(:demo_email) %>
    <% else %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: demo_field_helper(:demo_email) %>
    <% end %>
  </div>

  <div class="break" style="height: 5px;"></div>

  <div class="login_field">
    <%= f.label :password %>:
    <div class="break" style="height: 3px;"></div>
    <% if demo_mode %>
      <div class="demo_mode_login_field"><%= "*" * 24 %></div>
      <%= f.hidden_field :password, value: demo_field_helper(:demo_pw) %>
    <% else %>
      <%= f.password_field :password, autocomplete: "current-password", value: demo_field_helper(:demo_pw) %>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? && !demo_mode %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <br />
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "submit_button" %>
  </div>
<% end %>

<% demo_mode_clear_temp_vars %>
